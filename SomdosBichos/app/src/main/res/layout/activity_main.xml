<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="lucasfscr.com.somdosbichos.MainActivity"    android:background="@color/background"    >    <ImageButton        android:id="@+id/imageButton"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:layout_marginTop="24dp"        android:background="@color/background"        android:src="@drawable/logo"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"/>    <ImageButton        android:id="@+id/imgDog"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="60dp"        android:layout_marginTop="16dp"        android:background="@color/background"        android:src="@drawable/cao"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imageButton"/>    <ImageView        android:id="@+id/imgCat"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="60dp"        android:layout_marginTop="16dp"        android:background="@color/background"        android:src="@drawable/gato"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imageButton"/>    <ImageView        android:id="@+id/imgLion"        android:layout_width="106dp"        android:layout_height="wrap_content"        android:layout_marginStart="60dp"        android:layout_marginTop="28dp"        android:src="@drawable/leao"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imgDog"/>    <ImageView        android:id="@+id/imgMonkey"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="60dp"        android:layout_marginTop="16dp"        android:src="@drawable/macaco"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imgCat"/>    <ImageView        android:id="@+id/imgSheep"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="60dp"        android:layout_marginTop="28dp"        android:src="@drawable/ovelha"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imgLion"/>    <ImageView        android:id="@+id/imgCow"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="60dp"        android:layout_marginTop="12dp"        android:src="@drawable/vaca"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imgMonkey"/>    <ImageView        android:id="@+id/imageView5"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="8dp"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:src="@drawable/direitos"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"/></android.support.constraint.ConstraintLayout>